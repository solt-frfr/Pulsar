                <TextBlock Name="TypeName8" Grid.Row="7" Grid.Column="1" Text="ModType" Foreground="#c7ffcf" FontSize="18" FontStyle="Oblique" VerticalAlignment="Center" HorizontalAlignment="Center"/>
